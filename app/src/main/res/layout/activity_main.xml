<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.MainActivity">

    <com.mike.moodtrackernew.view.VerticalViewPager
        android:id="@+id/verticalViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

    </com.mike.moodtrackernew.view.VerticalViewPager>

    <ImageButton
        android:contentDescription="@string/button_to_write_a_comment"
        android:id="@+id/addAComment"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:onClick="buttonClicked"
        app:srcCompat="@drawable/ic_note_add_black" />


    <ImageButton
        android:contentDescription="@string/button_to_get_the_comments_history"
        android:id="@+id/history"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_history_black" />

    <ImageButton
        android:contentDescription="@string/button_to_get_the_comments_history"
        android:id="@+id/graphic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        app:srcCompat="@android:drawable/ic_menu_sort_by_size" />


</RelativeLayout>